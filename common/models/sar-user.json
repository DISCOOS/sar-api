{
  "name": "SARUser",
  "base": "User",
  "idInjection": true,
  "options": {
    "validateUpsert": true,
    "remoting": {
      "sharedMethods": {
        "*": false,
        "persons": true
      }
    }
  },
  "hidden": [
    "kovaId"
  ],
  "properties": {
    "name": {
      "type": "string",
      "required": true
    },
    "username": {
      "type": "string",
      "required": true
    },
    "email": {
      "type": "string",
      "required": true
    },
    "isAvailable": {
      "type": "boolean",
      "required": true
    },
    "isTrackable": {
      "type": "boolean",
      "required": true
    },
    "isAdmin": {
      "type": "boolean",
      "required": true
    },
    "deviceToken": {
      "type": "string",
      "required": false
    }

  },
  "validations": [],
  "automaticValidation": true,
  "relations": {
    "missions": {
      "type": "hasMany",
      "model": "Mission",
      "foreignKey": "creator"
    },
    "expenses": {
      "type": "hasMany",
      "model": "Expence",
      "foreignKey": ""
    },
    "attendants": {
      "type": "hasMany",
      "model" : "Mission",
      "foreignKey": "attendingId",
      "through": "Attendants"
    },
    "accessTokens": {
      "type": "hasMany",
      "model": "SARAccessToken",
      "foreignKey": "userId",
      "options": {
        "disableInclude": true
      }
    }
  },
  "acls": [],
  "methods": {}
}
